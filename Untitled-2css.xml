.body {
    margin:0
}
.header {
    background-color: white;
    width: 100%;
    height: 50px;
    border-style: outset;
    
    
}
.header-list li {
    list-style-type: none;
    float: right;
}
.header-list a {
    color: black;
    text-decoration-line: none;
    padding: 10px;
}

.main {
    background-color:rgb(230,230,230);
    height: 100%;
    width: 100%;
    
}
.main-isi {
    background-color: white;
    margin-left: 40px;
    margin-top: 20px;
    margin-right: 40px;
    padding: 20px;
}

.profil {
   float:right;
   margin-right: 100px;
}
.profil h1 {
    margin-top:30px ;
}
.profil p {
    margin-bottom: 70px;
    color: rgb(105, 105, 105);
}
.kontak {
    background-color: blue;
    color: white;
    text-decoration: none;
    padding: 10px 20px;
}
:active .kontak {
    background-color: green;
}
.resume {
    color: green;
    border-style: solid;
    text-decoration: none;
    margin-left: 5px;
    padding: 7px 17px;
}
:active.resume{
    color: blue;
}
.daftarisi {
    float: right;
    margin-right: 450px;
    margin-top: 25px;
}
.daftar {
    float: right;
    margin-right: 50px;
}
.isi {
    float:right;
    color: rgb(105, 105, 105);
    
}
.form {
    padding:50px;
    background-color:rgb(230,230,230) ;
}
.form input{
    width: 100%;
}
.form textarea{
    width: 100%;
}
.submit {
    width: 100%;
    background-color: green;
    color: white;
    padding-left: 590px;
    padding-right: 590px;
    text-align: center;
    padding-top:10px ;
    padding-bottom:10px ;
    text-decoration: none;
}
:active .submit {
    background-color: blue;
}